<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
  >
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_main_hi"
        android:text="Hi!"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/ly_main_2"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#D3D3D3"
        android:alpha="0.3"
        android:id="@+id/ly_main_2"
        >
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:id="@+id/txt_main_email"
            android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Continue"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_main_continue"
            android:backgroundTint="@color/black"
            android:layout_below="@+id/txt_main_email"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:id="@+id/lbl_main_or"
            android:layout_below="@+id/btn_main_continue"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:id="@+id/ly_main_fb"
            android:layout_below="@id/lbl_main_or"
            android:layout_marginBottom="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Facebook"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/fb_logo"
            android:id="@+id/img_main_fb"
            android:layout_below="@id/lbl_main_or"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_below="@id/ly_main_fb"
            android:id="@+id/ly_main_google"
            android:layout_marginBottom="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/google"
            android:id="@+id/img_main_google"
            android:layout_below="@id/ly_main_fb"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_below="@id/ly_main_google"
            android:id="@+id/ly_main_apple"
            android:layout_marginBottom="10dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Apple"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/appple"
            android:id="@+id/img_main_apple"
            android:layout_below="@id/ly_main_google"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:layout_below="@+id/ly_main_apple"
            android:layout_marginLeft="20dp"
            android:id="@+id/lbl_main_no_acct"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_toRightOf="@+id/lbl_main_no_acct"
            android:layout_below="@+id/ly_main_apple"
            android:id="@+id/lbl_main_no_signup"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:layout_below="@+id/lbl_main_no_acct"
            android:id="@+id/lbl_main_no_forgot"
            android:textColor="@color/black"
            android:layout_margin="20dp"

            />



    </RelativeLayout>



</RelativeLayout>